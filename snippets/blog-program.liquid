<div class="grid-row full-height">
  <div class="grid-item item-s-12 mobile-only  padding-top-small padding-bottom-small">
  {% for article in blog.articles %}
    {% include 'article-program' %}
  {% endfor %}
  </div>

  <div class="grid-item item-s-6 desktop-only padding-top-small padding-bottom-small border-right-half">
  {% for article in blog.articles %}
    {% assign mod = forloop.index | modulo: 2 %}
    {% if mod == 1 %}
      {% include 'article-program' %}
    {% endif %}
  {% endfor %}
  </div>

  <div class="grid-item item-s-6 desktop-only padding-top-small padding-bottom-small border-left-half">
  {% for article in blog.articles %}
    {% assign mod = forloop.index | modulo: 2 %}
    {% if mod == 0 %}
      {% include 'article-program' %}
    {% endif %}
  {% endfor %}
  </div>
</div>
