$header-height = 83px
$header-and-title-height = 81px + $header-height

.full-height
  min-height: calc('100vh - ' + $header-height)

.full-height-after-title
  min-height: calc('100vh - ' + $header-and-title-height)

.item-padding-extra
  padding-left: $margin-basic
  padding-right: $margin-basic

$border-style-half = 1px solid $color-black

.border-right-half
  border-right: $border-style-half

.border-left-half
  border-left: $border-style-half

// HEADER

#menu-nav
  border-right: $border-style

#main-content
  margin-top: $header-height

.dropdown-icon-holder
  text-align: center

// PRODUCT

#product-details-column
  border-top: 0
  order: -1
  align-self: initial

#product-details-header
  cursor: default

#product-details-holder
  flex-basis: auto
  flex-grow: 1

#product-details
  height: auto
  flex-basis: auto
  flex-grow: 1

.hide-details
  display: none

.show-details
  display: none

#product
  &.details-active
    #product-details
      height: auto
      flex-basis: auto
      flex-grow: 1
    .hide-details
      display: none
    .show-details
      display: none

.product-gallery-item
  padding: 0 $margin-small
  img
    max-width: 30vw

.gallery-prev
  left: $margin-basic

.gallery-next
  right: $margin-basic

.slick-dots
  margin-top: $margin-tiny
  li
    margin: 0 $margin-micro

// ABOUT

#page-about-content
  padding-bottom: $margin-small

#page-about-contact
  text-align: center
  align-self: center

// CART

#cart
  flex-direction: row

#cart-items-column
  order: 2

#cart-options-holder
  order: 1
